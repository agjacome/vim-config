{
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "html",
    "javascript",
    "javascriptreact",
    "json",
    "markdown",
    "scala",
    "typescript",
    "typescriptreact"
  ],

  "suggest.asciiCharactersOnly": true,

  "eslint.autoFixOnSave": true,
  "eslint.filetypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "prettier.disableSuccessMessage": true,

  "html.enable": true,
  "html.autoClosingTags": true,
  "html.format.enable": true,
  "html.suggest.html5": true,
  "html.validate.html": true,
  "html.filetypes": ["html"],

  "markdownlint.config": {
    "default": true,
    "line-length": false
  },

  "languageserver": {
    "metals": {
      "command": "metals-vim",
      "rootPatterns": ["build.sbt", "build.sc"],
      "filetypes": ["scala", "sbt"]
    }
  }
}
